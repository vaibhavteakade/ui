<?xml version="1.0" encoding="UTF-8"?>

<plugin id="com.acme.uI.UI"
   moduleUri="UI.swf" defaultBundle="com_acme_uI">

   <resources>
      <resource locale="{locale}">
         <!-- relative path of the resource .swf generated by the build script -->
         <module uri="locales/UI-{locale}.swf"/>
      </resource>
   </resources>

   <!-- Example: add a custom section view (portlet) in the VMs summary tab -->
   <extension id="com.acme.uI.UI.vmSummaryView">
      <extendedPoint>vsphere.core.vm.summarySectionViews</extendedPoint>
      <object>
         <name>#{summary.label}</name>
         <componentClass className="com.acme.uI.views.UIView"/>
      </object>
   </extension>
</plugin>
